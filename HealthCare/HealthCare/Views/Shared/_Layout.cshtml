@using HealthCare.Models
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HealthCare</title>
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Layout.css" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
</head>
<body>
    <header>
        <div class="text-center panel panel-title" id="titulo"><h1 class="h1">HealthCare</h1></div>
        <div id="navegacion" class="text-center">
           <table id="nav">
               <tr>
                    <td>
                        @using (Html.BeginForm("Login", "Clientes"))
                        {
                            if (Session["zona"] as string == "Zona Clientes")
                            {
                                <button class="btn" style="background-color:#088A4B; color:white; width:50%">Zona Clientes</button>
                            }
                            else
                            {
                                <button class="btn btn-default" style="width:50%">Zona Clientes</button>
                            }

                        }                    
                    </td>
                    <td>
                        @using (Html.BeginForm("Login", "Empresas"))
                        {
                            if (Session["zona"] as string == "Zona Empresas")
                            {
                                <button id="Empresas" class="btn" style="background-color:#088A4B; color:white; width:50%">Zona Empresas</button>
                            }
                            else
                            {
                                <button id="Empresas" class="btn btn-default" style="width:50%">Zona Empresas</button>
                            }
                        }                                                       
                    </td>
                </tr>
            </table>
        </div>
    </header>
    <main> 
        <table id="main">
            <tr>
                <td id="menu" valign="top">
                    <table>
                        <tbody>
                            <tr><td>@Html.ActionLink("Acceso", "Login", null, new { @style = (ViewBag.menu == "Acceso" ? "background-color:#088A4B; color:white;" : "") })</td></tr>
                            <tr><td>@Html.ActionLink("Registro", "Registro", null, new { @style = (ViewBag.menu == "Registro" ? "background-color:#088A4B; color:white;" : "") })</td></tr>
                            <tr><td>@Html.ActionLink("Recuperar Cuenta", "Recuperar", null, new { @style = (ViewBag.menu == "Recuperar" ? "background-color:#088A4B; color:white;" : "") })</td></tr>
                            @if (Session["cliente"] != null)
                            {
                                <tr><td>@Html.ActionLink("Categorias", "Categorias", null, new { @style = (ViewBag.menu == "Inicio" ? "background-color:#088A4B; color:white;" : "") })</td></tr> 

                                if (Session["categoria"] != null)
                                {
                                    <tr><td>@Html.ActionLink(Session["categoria"].ToString(), "Subcategorias", new { id = Session["categoria"] }, new { @style = (ViewBag.menu == "Categoria" ? "background-color:#088A4B; color:white;" : "") }) </td></tr> 
                                }

                                if (Session["subcategoria"] != null)
                                {
                                    <tr><td>@Html.ActionLink(Session["subcategoria"].ToString(), "Empresas", new { id = Session["subcategoria"] }, new { @style = (ViewBag.menu == "Subcategoria" ? "background-color:#088A4B; color:white;" : "") }) </td></tr> 
                                }

                                if (Session["empresa"] != null)
                                {
                                <tr><td>@Html.ActionLink(Session["empresa"].ToString(), "Items", new { id = Session["empresa"] }, new { @style = (ViewBag.menu == "Empresa" ? "background-color:#088A4B; color:white;" : "") }) </td></tr> 
                                }
                             }

                             @if (Session["Job"] != null)
                             {
                                <tr><td>@Html.ActionLink("Solicitudes en Espera", "Solicitudes", new { id = 1 }, new { @style = (ViewBag.menu == "Inicio" ? "background-color:#088A4B; color:white;" : "") })</td></tr>
                                <tr><td>@Html.ActionLink("Solicitudes en Proceso", "Solicitudes", new { id = 2 }, new { @style = (ViewBag.menu == "Inicio" ? "background-color:#088A4B; color:white;" : "") })</td></tr>
                                <tr><td>@Html.ActionLink("Solicitudes Terminadas", "Solicitudes", new { id = 3 }, new { @style = (ViewBag.menu == "Inicio" ? "background-color:#088A4B; color:white;" : "") })</td></tr>
                             }
                        </tbody>
                        <tfoot>                            
                            @if (Session["cliente"] != null)
                            {
                                <tr><td>@Html.ActionLink("Tu cesta", "Cesta")</td></tr> 
                            }
                        </tfoot>
                    </table>
                </td>
                <td>
                    <div id="contenido">@RenderBody()</div>
                </td>
            </tr>
        </table>
    </main>
    <footer>
        <div><p>ESTO ES EL FOOTER</p></div>
    </footer>

    <script>
        $("#texto").keyup((ev) => {
            $("#aviso").text("Quedan " + (140 - ev.target.value.length) + " caracteres");
        });
    </script>
</body>
</html>
