@using HealthCare.Models
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:20px">
    <table class="table">
        <thead>
            <tr class="success" style="border-bottom-width:1px; border-bottom-color:#dbdbdb; border-bottom-style: solid">
                <td>#</td>
                <td>Nombre</td>
                <td>Telefono</td>
                <td>Valoracion</td>
            </tr>            
        </thead>
        @if (Model.Count > 0)
        {
            @Html.Partial("PartialEmpresas", Model as List<Empresa>);
        }
        else
        {
            <tbody>
                <tr><td><br /></td></tr>
                <tr>
                    <td colspan="4">Aun no hay empresas registradas en esta sección</td>
                </tr>
            </tbody>
        }
    </table>
</div>