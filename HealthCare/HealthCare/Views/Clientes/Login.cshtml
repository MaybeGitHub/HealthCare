@model HealthCare.Models.Clientes
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Clientes</title>
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
</head>
<body>
    <div class="container center-block text-center align" style="width:30%">
        <form method="post" action="/Clientes/Login">
            <table class="table">
                <thead>
                    <tr><th colspan="2" class="text-center h1" style="background-color:#4B088A; color:white">Bienvenido a HealthCare</th></tr>
                    <tr>
                        <td><input class="btn btn-default" type="button" id="Clientes" value="Soy Cliente" /></td>
                        <td><input class="btn btn-default" type="button" id="Empresas" value="Soy Empresa" /></td>
                    </tr>
                    <tr><th colspan="2" class="text-center" style="background-color:#BCF5A9">Clientes</th></tr>
                </thead>
                <tbody>
                    <tr><td colspan="2">Nº Seguridad Social</td></tr>
                    <tr><td colspan="2">@Html.TextBoxFor(x => x.SS)</td></tr>
                    <tr>                        
                        <td><a class="btn btn-primary" href="~/Clientes/Registro">Registrarse</a></td>
                        <td><input class="btn btn-success" type="submit" value="Entrar" /></td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
    <script>
        $("#Clientes").add("#Empresas").on("click", (ev) => {
            location.href = "/" + ev.target.id + "/Login";
        })
    </script>
</body>
</html>
