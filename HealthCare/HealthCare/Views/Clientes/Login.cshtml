@model HealthCare.Models.Clientes
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Clientes</title>
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
</head>
<body>
    <center>
        <br /><input type="button" id="cliente" value="Soy Cliente" />
        <input type="button" id="empresa" value="Soy Empresa" style="margin-left:10px" />

        <div>
            <form method="post" action="/Clientes/Login">                
                <fieldset>
                    <legend style="text-align:center">Clientes</legend>
                    <label>Nº Seguridad Social:</label>@Html.TextBoxFor(x => x.SS, "style = 'margin-left:10px'")
                </fieldset>
                @Html.ValidationSummary()         
                <input type="submit" value="Entrar" />
            </form>
        </div>
    </center>    
    <script>
        $("#cliente").add("#empresa").on("click", (ev) => {
            location.href = "/" + ev.target.value.split(" ")[1] + "s/Login";
        })
    </script>
</body>
</html>
