@model HealthCare.Models.Item
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("HacerPeticion", "Empresas"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal form" style="padding: 5% 10%">
        <h2>Sugerir Producto</h2>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2 req" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @id = "nombreItem", @style = "width: 40%" } })
                <label hidden="hidden" class="mierror" id="errorLabel"></label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label col-md-2 req" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Precio, "Precio ( para decimales, usar coma )", new { htmlAttributes = new { @class = "form-control", @id = "precio", @style = "width: 40%" } })
                <label hidden="hidden" class="mierror" id="errorLabel"></label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar Producto" class="btn btn-success" />
            </div>
        </div>
    </div>
}
