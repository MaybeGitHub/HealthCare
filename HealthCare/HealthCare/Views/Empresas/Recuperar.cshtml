@model HealthCare.Models.Empresa

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Recuperar", "Empresas"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="padding: 5% 10%">
        <h2>Recuperar Cuenta</h2>
        <br />
        <h4>Empresas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2 req" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @id = "nombre", @style = "width: 40%" } })
                <label hidden="hidden" class="mierror" id="errorNombre">@ViewBag.errorNombre</label>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 req" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "email", @style = "width: 40%" } })
                <label hidden="hidden" class="mierror" id="errorEmail">@ViewBag.errorEmail</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Recuperar Cuenta" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<script>
    var errorLabel = $("#errorNombre");
    if (errorLabel.text().length > 0) {
        errorLabel.attr("hidden", null);
    } else {
        errorLabel.attr("hidden", "hidden");
    }

    var errorLabel = $("#errorEmail");
    if (errorLabel.text().length > 0) {
        errorLabel.attr("hidden", null);
    } else {
        errorLabel.attr("hidden", "hidden");
    }
</script>
